<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="specprice.list">
      <field name="name">specprice list</field>
      <field name="model">specprice.specprice</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="specprice.action_window">
      <field name="name">specprice window</field>
      <field name="res_model">specprice.specprice</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="specprice.action_server">
      <field name="name">specprice server</field>
      <field name="model_id" ref="model_specprice_specprice"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="specprice" id="specprice.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="specprice.menu_1" parent="specprice.menu_root"/>
    <menuitem name="Menu 2" id="specprice.menu_2" parent="specprice.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="specprice.menu_1_list" parent="specprice.menu_1"
              action="specprice.action_window"/>
    <menuitem name="Server to list" id="specprice" parent="specprice.menu_2"
              action="specprice.action_server"/>

  </data>
</odoo>